<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ezen.www.repository.QnaMapper">

    <select id="getQna" resultType="com.ezen.www.domain.QnaVO">
        select * from qna
        <include refid="search" />
        order by qno limit #{pageStart}, #{qty}
    </select>

    <select id="getTotalCount">
        select count(qno) from qna
        <include refid="search" />
    </select>

    <!-- admin 관련 -->
    <select id="qna_list" resultType="com.ezen.www.domain.QnaVO">
        select * from qna
        order by qno
    </select>

    <update id="modifyQna">
        update qna set title=#{title}, content=#{content}
        where qno=#{qno}
    </update>



    <sql id="search">
        <if test="type != null">
            <trim prefix="where (" suffix=")" suffixOverrides="or">
                <foreach collection="typeToArray" item="type">
                    <trim suffix="or">
                        <choose>
                            <when test="type == 't'.toString()">
                                title like concat('%', #{keyword}, '%')
                            </when>
                            <when test="type == 'w'.toString()">
                                writer like concat('%', #{keyword}, '%')
                            </when>
                        </choose>
                    </trim>
                </foreach>
            </trim>
        </if>
    </sql>


</mapper>